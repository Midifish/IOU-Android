<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Points:1000"
        android:id="@+id/yourPointsText"
        android:textSize="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Choice"
        android:id="@+id/addFavorBtn"
        android:textSize="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Favor Choices"
            android:id="@+id/favorChoicesText" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favorChoicesList"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_below="@id/favorChoicesText"
            android:layout_alignParentBottom="true"
            android:choiceMode="singleChoice" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Favors you requested"
            android:id="@+id/favorsYouRequestedText" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favorsYouRequestedList"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_below="@+id/favorsYouRequestedText"
            android:layout_alignParentBottom="true"
            android:choiceMode="singleChoice" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Favors requested of you"
            android:id="@+id/favorsRequestedOfYouText" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favorsRequestedOfYouList"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_below="@+id/favorsRequestedOfYouText"
            android:layout_alignParentBottom="true"
            android:choiceMode="singleChoice" />

    </RelativeLayout>

</LinearLayout>
